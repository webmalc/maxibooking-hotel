{% extends 'MBHPriceBundle:Service:layout.html.twig' %}

{% set small_title = "mbhpricebundle.view.service.editentry.redaktirovaniyeuslugivkategorii"|trans ~ "<" ~ entity.name ~ ">" %}
{% set layout = 'box' %}

{% block content %}

    {{ form_start(form, {'action': path('price_service_category_entry_update', {'id': entry.id}),  'attr': {'class': 'form-horizontal'}}) }}
    {{ form_widget(form) }}
    {% if entry.system %}
        {% include 'MBHBaseBundle:Actions:update.html.twig' with {'entity': entry } %}
    {% else %}
        {% include 'MBHBaseBundle:Actions:update.html.twig' with {'entity': entry, 'delete_route': 'price_service_category_entry_delete' } %}
    {% endif %}
    
    {{ form_end(form) }}
    
    {% include 'MBHBaseBundle:Partials:entityInfo.html.twig' with {'entity': entry, 'logs': logs, 'delete_route': 'price_service_category_entry_delete' } %}
    
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>
        var currentService = {
            serviceId: "{{ service.service.id}}",
            isRecalcWithGuests: {{ service.recalcCausedByTouristsNumberChange == true ? "true" : "false"}}
        };
    </script>
{% endblock %}
