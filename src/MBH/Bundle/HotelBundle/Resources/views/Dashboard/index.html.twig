{% extends "MBHHotelBundle::layout.html.twig" %}

{% set title = 'views.dashboard.title'|trans %}

{% block scripts %}
    {{ parent() }}

    {% javascripts filter='?uglifyjs2'
        '@MBHHotelBundle/Resources/public/js/dashboard/*'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}

{% block styles %}
    {{ parent() }}

    {% stylesheets filter='cssrewrite, uglifycss' '@MBHHotelBundle/Resources/public/css/dashboard/*'%}
        <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block content %}
    {% include '@MBHHotel/Dashboard/flowWidgets.html.twig' %}
    {% include '@MBHHotel/Dashboard/notConfirmedPackages.html.twig' %}
    {% include '@MBHHotel/Dashboard/checkInOut.html.twig' %}
{% endblock %}