{% extends "MBHChannelManagerBundle:ChannelManager:layout.html.twig" %}

{% set small_title = "channel_manager.logs.small_title"|trans %}
{% set layout = "box" %}

{% block content %}
    {% if contentArray %}
        {% include 'MBHChannelManagerBundle:ChannelManager:extendedPager.html.twig'
            with {'page': page, 'pages': 10, class : 'accommodation-report-pagination',
            link: link,
            offset: offset}
        %}
        <form action="" method="POST">
            <table id="log-table"  style="width:100%" class="table table-striped table-hover table-condensed">
                <thead>
                <tr>
                    <th class="td-xl">{{ "log.data_table.date"|trans }}</th>
                    <th >{{ "log.data_table.log"|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for stringArray in contentArray %}
                    <tr role="row" class="odd">
                        <td>
                            <div class="text-left">{{ stringArray[0] | raw }}</div>
                        </td>
                        <td>
                            <div class="text-left">
                                <div>{{ stringArray[1] | raw }}</div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% include 'MBHBaseBundle:Actions:new.html.twig' with {'save_close': false, save_text: 'channel_manager.logs.clear'|trans } %}
        </form>
    {% else %}
        <div class="alert alert-warning">{{ 'channel_manager.logs.no_entries_in_file'|trans }}</div>
    {% endif %}
{% endblock %}
