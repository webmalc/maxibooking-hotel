<h3 class="text-center">{{ 'cm_connection_instructions.part2.header'|trans }}</h3>
<p>{{ 'cm_connection_instructions.part2.text1'|trans }}</p>

{% set numberOfStepsByCMs = {booking: 7, expedia: 2, ostrovok: 3, hundred_one_hotels: 3, vashotel: 2} %}

<ol>
    {% for stepNumber in 1..numberOfStepsByCMs[channelManager] %}
        <li>{{ ('cm_connection_instructions.part2.' ~ channelManager ~ '.text' ~ stepNumber)|trans|raw }}</li>
    {% endfor %}
</ol>
<p>
    {% if channelManager == 'booking' %}
        {{ 'cm_connection_instructions.part2.booking.note'|trans|raw }}
    {% endif %}
</p>
<h3 class="text-center">{{ 'cm_connection_instructions.part3.header'|trans}}</h3>
