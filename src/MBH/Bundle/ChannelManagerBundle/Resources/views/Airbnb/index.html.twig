{% extends "MBHChannelManagerBundle:Airbnb:layout.html.twig" %}

{% block content %}
    {% include 'MBHChannelManagerBundle::tabs.html.twig' with {'active': 1, 'entity': config, base: 'airbnb', services: false } %}
    <div class="tab-content">
        <div class="tab-pane active" id="home">
            {{ form_start(form, {'action': path('airbnb'), 'attr': {'class': 'form-horizontal'}}) }}
            {{ form_widget(form) }}
            {% embed 'MBHChannelManagerBundle::actions.html.twig' %}
                {% block additional_actions %}
                    {% if config and config.isReadyToSync() %}
                        <li>
                            <a type="button" style="margin-right: 5px"
                                    href="{{ path('airbnb_all_packages_sync') }}"
                                    class="btn btn-primary navbar-btn navbar-link-button">
                                <i class="fa fa-paper-plane-o"> </i>
                                {{ 'views.booking.actions.sync_old'|trans({}, 'MBHChannelManagerBundle') }}
                            </a>
                        </li>
                    {% endif %}
                {% endblock %}
            {% endembed %}
            {{ form_end(form) }}

            {% if config %}
                {% include 'MBHBaseBundle:Partials:entityInfo.html.twig' with {'entity': config, 'logs': logs} %}
            {% endif %}
        </div>
    </div>
{% endblock %}