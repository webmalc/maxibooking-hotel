{% form_theme form '@MBHOnlineBooking/Form/children_age_entry_widget.twig' %}

{#ID формы не менять, используется в js#}
{{ form_start(form, {attr: {id: 'search-form', 'data-sync': requestSearchUrl, 'data-async': requestSearchUrlAsync }, action: requestSearchUrl }) }}
<div class="booking-title">Расчет стоимости</div>
<div class="booking-group">
    {{ form_label(form.hotel) }}
    <div class="booking-select">
        {{ form_widget(form.hotel) }}
    </div>
</div>

<div class="booking-date clearfix">
    <div class="col-md-12 col-sm-12 col-xs-12">
        {{ form_label(form.begin) }}
        {{ form_widget(form.begin, {attr: {readonly: 'readonly'}}) }}

    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
        {{ form_label(form.end) }}
        {{ form_widget(form.end, {attr: {readonly: 'readonly'}}) }}

    </div>
</div>
<div class="booking-nights">
    <span>Количество ночей:&nbsp;<span id="nights_amount"></span> </span>
</div>

<div class="booking-number clearfix">
    <div class="col-md-6 col-sm-6 col-xs-6">
        {{ form_label(form.adults) }}
        {{ form_widget(form.adults) }}
    </div>
    <div class="col-md-6 col-sm-6 col-xs-6">
        {{ form_label(form.children) }}
        {{ form_widget(form.children) }}
    </div>
</div>
<div id="children_age_container" class="booking-age clearfix">
    {{ form_label(form.children_age) }}

    {{ form_widget(form.children_age) }}

</div>
<div class="clear"></div>


