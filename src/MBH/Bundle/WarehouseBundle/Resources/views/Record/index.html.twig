{% extends 'MBHWarehouseBundle:Record:layout.html.twig' %}

{% set small_title = 'warehouse.record.list'|trans %}
{% set layout = "tabs" %}

{% block content %}
    {% if app.request.isxmlhttprequest is empty %}
        {% include 'MBHWarehouseBundle:Record:tabs.html.twig' with {'active': 1} %}
    {% endif %}

    <div class="tab-content">
        <div class="tab-pane active" id="home">

			{% include 'MBHBaseBundle:Partials:filter.html.twig' with {'id': 'records-filter-form-widget' } %}

			{{ form_start(form, {attr: {class: 'form-inline filter-form remember', id: 'records-filter-form'}}) }}
				<div class="filter-form_group-date">
					<div class="filter-form_input">
						<i class="fa fa-calendar" title='{{ 'warehouse.resources.view.record.dates'|trans }}' data-toggle='tooltip'></i>
						<div class="filter-form_input">
                            {{ form_widget(form.recordDateFrom) }}
							<span class="filter-form_separator"></span>
                            {{ form_widget(form.recordDateTo) }}
						</div>
					</div>
				</div>

				<div class="filter-form_input">
					<i class="fa fa-arrows-v" title='{{ 'warehouse.record.operation'|trans }}' data-toggle="tooltip"></i>
					{{ form_widget(form.operation) }}
				</div>

				<div class="filter-form_input">
					<i class="fa fa-home" title='{{ 'warehouse.record.hotels'|trans }}' data-toggle="tooltip"></i>
					{{ form_widget(form.hotel) }}
				</div>

				<div class="filter-form_input">
					<i class="fa fa-book" title='{{ 'warehouse.record.goods'|trans }}' data-toggle="tooltip"></i>
					{{ form_widget(form.wareItem) }}
				</div>

			{{ form_end(form, {render_rest: false}) }}		
			</div></div>

			<table id="records-table" class="records-table table table-striped table-hover table-condensed table-icons table-actions not-auto-datatable">
				<thead>
				<tr>
					<th class="td-xs"></th>
					<th>{{ 'warehouse.record.title'|trans }}</th>
					<th class="td-sm">{{ 'warehouse.record.recordDate'|trans }}</th>
					<th class="td-sm">{{ 'warehouse.record.operation'|trans }}</th>
					<th class="td-md">{{ 'warehouse.record.hotel'|trans }}</th>
					<th class="td-sm">{{ 'warehouse.record.th.quantity'|trans }}</th>
					<th class="td-sm text-right">{{ 'warehouse.record.th.price'|trans }}</th>
					<th class="td-sm text-right">{{ 'warehouse.record.amount'|trans }}</th>
					<th class="td-sm"></th>
				</tr>
				</thead>

				<tbody>
				</tbody>
			</table>

			{% include 'MBHBaseBundle:Actions:list.html.twig' with {'route': 'warehouse_record_new', 'role': 'WAREHOUSE_RECORD'} %}
        </div>
    </div>

{% endblock %} 
