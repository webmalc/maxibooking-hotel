{% if formConfig.forMbSite %}
    {% set themeColors = siteConfig.getThemeColors() %}
    <style>
        #mbh-form {
            border-radius: 0;
            background-color: {{ themeColors['mainlight'] }};

        }
        .mbh-form-row.form-group:not(#mbh-form-submit-wrapper) {
            margin: 15px 8px 0 8px;
            padding: 10px 15px;
            background: #fff;
            font-family: 'PT Serif Caption', serif;
        }
        #mbh-form .form-group label, #mbh-form-adults-children-wrapper>.form-group label {
            margin-bottom: 5px;
            padding-bottom: 3px;
            font-size: 18px;
            border-bottom: 1px solid #969696;
        }
        #mbh-form-submit-wrapper.mbh-form-row {
            margin-top: 10px;
        }
        .btn-primary, .btn-primary:active, .btn-primary:focus, #mbh-results-wrapper .panel-heading, .btn-info, .btn-info:hover, .btn-info:active {
            background: {{ themeColors['main'] }} !important;
            border-color: {{ themeColors['main'] }}  !important;
        }
        .btn-primary {
            font-size: 16px;
        }
        #mbh-results-wrapper .panel-primary {
            border-color: {{ themeColors['main'] }};
        }
        button#mbh-form-submit {
            padding: 11px;
            width: inherit;
            border-radius: 0;
        }
        #mbh-form .input-sm {
            border: none;
            font-weight: 600;
            font-size: 16px;
        }
        #mbh-form .form-control {
            background-color: #fff;
            box-shadow: none;
        }
        .mbh-results-info {
            padding: 19px;
            margin-bottom: 20px;
            background-color: #f5f5f5;
            border: 1px solid #e3e3e3;
            border-radius: 4px;
            color: #333;
        }
    </style>
{% endif %}