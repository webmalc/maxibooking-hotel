<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Maxibooking</title>
    <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.1/themes/smoothness/jquery-ui.css" />
    {% set isYandexAnalyticEnabled = formConfig and formConfig.yandexAnalyticConfig and formConfig.yandexAnalyticConfig.isEnabled == true %}
    {% if isYandexAnalyticEnabled %}
        <!-- Yandex.Metrika counter -->
        <script type="text/javascript" >
            var counterId = "{{ formConfig.yandexAnalyticConfig.id }}";
            var yaCounterObjName = 'yaCounter' + counterId;
            (function (d, w, c) {
                (w[c] = w[c] || []).push(function() {
                    try {
                        w[yaCounterObjName] = new Ya.Metrika({
                            id: counterId,
                            clickmap:true,
                            trackLinks:true,
                            accurateTrackBounce:true,
                            webvisor:true
                        });
                    } catch(e) { }
                });

                var n = d.getElementsByTagName("script")[0],
                    s = d.createElement("script"),
                    f = function () { n.parentNode.insertBefore(s, n); };
                s.type = "text/javascript";
                s.async = true;
                s.src = "https://mc.yandex.ru/metrika/watch.js";

                if (w.opera == "[object Opera]") {
                    d.addEventListener("DOMContentLoaded", f, false);
                } else { f(); }
            })(document, window, "yandex_metrika_callbacks");
        </script>
        <noscript><div><img src="https://mc.yandex.ru/watch/counterId" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
        <!-- /Yandex.Metrika counter -->
    {% endif %}
    {% if formConfig and formConfig.theme %}
        <link rel="stylesheet" href="{{ formConfig.theme }}">
    {% endif %}
    {% if formConfig and formConfig.cssLibraries is defined and formConfig.cssLibraries is iterable %}
        {% for link in formConfig.cssLibraries %}
            <link rel="stylesheet" href="{{ link }}">
        {% endfor %}
    {% endif %}
</head>

<body style="background-color: transparent;">
    <div id="mbh-form-wrapper" style="overflow: hidden; height: auto">
        <a href="http://maxi-booking.ru/" style="background-color: white; padding: 10px;">{{ 'views.api.get_form_iframe.online_booking_system'|trans}}</a>
    </div>
    {% if formConfig %}
        {% if formConfig.css %}
            <style>
                {{ formConfig.css|raw }}
            </style>
        {% endif %}
        {% if formConfig.js %}
        <script>
            window.onload = function () {
                {{ formConfig.js|raw }}
            };
        </script>
        {% endif %}
    {% endif %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.1/jquery-ui.min.js"></script>
    <script type="text/javascript" src="{{ url('online_form_get', {id: formId, locale: app.request.locale}) }}"></script>
</body>

</html>
