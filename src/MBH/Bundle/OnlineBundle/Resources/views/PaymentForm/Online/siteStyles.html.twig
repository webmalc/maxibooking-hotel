{% if paymentFormConfig.isForMbSite() %}
    <link href="https://fonts.googleapis.com/css?family=PT+Sans+Caption:400,700|PT+Serif+Caption:400,400i&amp;subset=cyrillic" rel="stylesheet">
    {% set themeColors = siteConfig.getThemeColors() %}
    <style>
        .panel-primary .panel-heading {
            background-color: {{ themeColors['mainlight'] }};
        }

        .btn-primary,
        .btn-primary,
        .btn-primary:active,
        .btn-primary:focus,
        .btn-success,
        .btn-success:active,
        .btn-success:focus,
        .btn-info,
        .btn-info:hover,
        .btn-info:active {
            background: {{ themeColors['main'] }} !important;
            border-color: {{ themeColors['main'] }}  !important;
        }
        .btn-primary {
            font-size: 16px;
        }

        h4 {
            color: black !important;
        }
        
        form .form-control {
            background-color: #fff;
        }

        #mbh-form-payment-accordion-search,
        #mbh-form-payment-generate,
        #mbh-form-payment-pay,
        input,
        button {
            border-radius: 0 !important;
        }
    </style>
{% endif %}