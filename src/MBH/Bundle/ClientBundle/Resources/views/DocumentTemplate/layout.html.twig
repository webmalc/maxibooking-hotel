{% endset %}

{% block scripts %}
    {{ parent() }}
    {% for plugin in plugins %}
        <script src="{{ asset('assets/vendor/tinymce/plugins/' ~ plugin ~ '/plugin.min.js') }}"></script>
    {% endfor %}

    <script>
        var mbh_property = {{ get_properties() }};
    </script>

    {% javascripts '@MBHClientBundle/Resources/public/js/tinymce/langs/ru.js' %}
        {% set url_lang_ru %}{{ asset_url }}{% endset %}
        <script src="{{ url_lang_ru }}"></script>
    {% endjavascripts %}

    {% javascripts '@MBHClientBundle/Resources/public/js/tinymce/plugin/mbh_data.tinymce.plugin.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@MBHClientBundle/Resources/public/js/tinymce/plugin/langs/ru.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        if (document.getElementById('mbh_client_document_template_content')) {

            tinymce.init({
                selector: '#mbh_client_document_template_content',
                theme: 'modern',
                language_url: '{{ url_lang_ru }}',
                skin_url: '/assets/vendor/tinymce/skins/lightgray',
                plugins_url: '/assets/vendor/tinymce/skins/lightgray',
                resize: 'both',
                fix_list_elements: false,
                protect: [/\{\%.*?\%\}/g],
                height: 300,
                fullpage_default_title: 'PDF',
                fullpage_default_encoding: '{{ injection|replace({"\n": "", "  ": ""})|raw }}',
                plugins: '{{ plugins|join(' ') }} mbh_data',
                toolbar: '{{ toolbar|join(' | ') }} | mbh_toggle_border mbh_rotate',
                menu: {
                        file   : {title : 'File'  , items : 'newdocument'},
                        edit   : {title : 'Edit'  , items : 'undo redo | cut copy paste pastetext | selectall'},
                        insert : {title : 'Insert', items : 'link media | template hr'},
                        view   : {title : 'View'  , items : 'visualaid'},
                        format : {title : 'Format', items : 'bold italic underline strikethrough superscript subscript | formats | removeformat'},
                        table  : {title : 'Table' , items : 'inserttable tableprops deletetable | cell row column'},
                        tools  : {title : 'Tools' , items : 'code'},
                        maxi   : {title : 'MaxiBooking ', items : 'mbh_hotel mbh_payer'}
                    },
                contextmenu: 'mbh_table_add statement_mbh mbh_table_property | mbh_all_data mbh_table_entity | link image | inserttable tableprops | cell row column deletetable'
            });
        }
    </script>
{% endblock %}

{% block styles %}
    {{ parent() }}
    <style>
        div.mce-fullscreen {
            z-index: 10000;
        }

        .mce-first-item-in-table-with-entity {
            cursor: default !important;

        }

        .mce-first-item-in-table-with-entity span {
            color: white !important;
        }

    </style>
{% endblock %}