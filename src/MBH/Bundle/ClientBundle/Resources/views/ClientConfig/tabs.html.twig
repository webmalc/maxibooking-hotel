{% set menu = [
    {'route': 'client_config', 'title': '<i class="fa fa-cog"></i> '~ 'client.tabs.params'|trans({}, 'MBHClientBundle')},
    {'route': 'client_payment_system', 'title': '<i class="' ~ currency().icon ~ '"></i> '~ 'client.tabs.payment_system'|trans({}, 'MBHClientBundle')},
    {'route': 'client_notification_config', 'title': '<i class="fa fa-envelope"></i> '~ 'client.tabs.notification'|trans({}, 'MBHClientBundle')},
    {'route': 'color_settings', 'title': '<i class="fa fa-paint-brush" aria-hidden="true"></i> '~ 'client.views.clientConfig.tabs.color_settings'|trans({}, 'MBHClientBundle')}
]
%}

<ul class="nav nav-tabs" role="tablist">
{% for item in menu %}
    <li {% if loop.index == active %}class="active"{% endif %}>
        <a {% if loop.index == active %}href="#home" role="tab" data-toggle="tab"{% else %}href="{{ path(item.route) }}"{% endif %}>{{item.title|raw}}</a>
    </li>
{% endfor %}
</ul>
