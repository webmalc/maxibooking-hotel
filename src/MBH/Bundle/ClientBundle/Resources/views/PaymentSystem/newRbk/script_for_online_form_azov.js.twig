var mbhNewRbk_Azov = {
  openCheckout : function(form) {
    this.createInvoice(form);
  },
  createInvoice: function(form) {
    var self = this;
    $.post(form.action, $(form).serialize()).done(function(data) {
      data = JSON.parse(data);
      if (data.status == true) {
        self.configAndOpen(data.data);
      }
        {% if app.environment == 'dev' %}
      if (data.status == false) {
        console.error(data.data);
      }
        {% endif %}
    })
  },
  configAndOpen: function(data) {
    data.finished = function() {
      window.location.href = '{{ successUrl }}';
    }
    var checkout = RbkmoneyCheckout.configure(data);
    checkout.open();
  }
};