{% extends 'MBHBaseBundle::page.html.twig' %}

{% block body %}

    <div class="lockscreen-wrapper">

        <div class="alert alert-primary text-center">
            <div>
                <i class="fa fa-spinner fa-spin"></i> {{ 'view.wait.your_shift_is_blocked'|trans}}
            </div>
            <div>
                {{ 'view.wait.duration'|trans}}: {{ 'view.wait.time'|trans({"%hourst%": workShift.duration|date('H'), "%minutes%" : workShift.duration|date('i')}) }}
            </div>
            <div>
                {{ 'view.wait.cash'|trans}}: {{ workShift.cashIncomeTotal|number_format(2) }} руб.
            </div>
        </div>

        <div class="login-box lockscreen-item" style="width: 380px">
            {% block messages %}
                {% include 'MBHBaseBundle::messages.html.twig' %}
            {% endblock %}
            <div class="login-logo">
                <a href="{{ path('_welcome') }}"><b>Maxi</b>Booking</a>
            </div>

            <div class="text-center">
                <div class="btn-group">
                    <a href="{{ path('work_shift_start', {id: workShift.id}) }}" class="btn btn-info btn-lg"><i class="fa fa-clock-o"> {{ 'view.wait.resume'|trans}}</i></a>
                    <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default btn-lg"><i class="fa fa-sign-out"></i> {{ 'mbhuserbundle.view.workshift.wait.vyyti'|trans }} </a>
                </div>
            </div>
            <div class="login-box-body">

            </div>
        </div>
    </div><!-- /.center -->

{% endblock %}