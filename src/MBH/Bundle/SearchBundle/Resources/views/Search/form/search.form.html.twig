{{ form_start(form, {'attr': {'class': 'form-inline search-form filter-form '}}) }}
{{ form_errors(form) }}

<div class="input">
    <i class="fa fa-calendar" title='{{ 'form.searchType.check_in'|trans() }}'
       data-toggle='tooltip'></i>&nbsp{{ form_widget(form.begin, {'attr' : {'style': 'max-width:100px !important; width: 100px;'}}) }}
</div>
<div class="input">
    - &nbsp{{ form_widget(form.end,{'attr' : {'style': 'max-width:100px !important; width: 100px;'}}) }}
</div>

<div class="input">
    <i class="fa fa-calendar-plus-o " title='{{ 'form.searchType.range'|trans() }}'
       data-toggle='tooltip'></i>&nbsp{{ form_widget(form.additionalBegin, {'attr': {'class': 'input-xxs'}}) }}
</div>

<div class="input">
    <i class="fa fa-calendar-plus-o " title='{{ 'form.searchType.range'|trans() }}'
       data-toggle='tooltip'></i>&nbsp{{ form_widget(form.additionalEnd, {'attr': {'class': 'input-xxs'}}) }}
</div>

<div class="input">
    <i class="fa fa-male" title='{{ 'form.searchType.adults'|trans() }}'
       data-toggle='tooltip'></i>&nbsp{{ form_widget(form.adults, {'attr': {'class': 'input-xxs'}}) }}
</div>
<div class="input">
    <i class="fa fa-child" title='{{ 'form.searchType.children'|trans() }}'
       data-toggle='tooltip'></i>&nbsp{{ form_widget(form.children, {'attr': {'class': 'input-xxs'}}) }}
    &nbsp;<i class="fa fa-sort-numeric-asc" id="search-children-ages"
             title='{{ 'form.searchType.children_ages'|trans() }}'>{{ form_widget(form.childrenAges) }}</i>
</div>
<div class="input">
    <i class="fa fa-bed" title='{{ 'form.searchType.room_type'|trans() }}'
       data-toggle='tooltip'></i>&nbsp{{ form_widget(form.roomTypes) }}
</div>

{% if is_granted('ROLE_FORCE_BOOKING') %}
    <div class="input">
        <i class="fa fa-exclamation-circle" title='{{ 'form.searchType.forceBooking'|trans() }}'
           data-toggle='tooltip'></i>&nbsp;{{ form_widget(form.isForceBooking) }}
    </div>
{% endif %}

{% set clientConfig = client_config() %}
{% if not clientConfig or not clientConfig.isInstantSearch %}
    <div class="input">
        <button class="btn btn-primary" id="searcher-submit-button">
            <i class="fa fa-search"></i> Найти
        </button>
    </div>
{% endif %}

<div class="hide">
    {{ form_end(form) }}
</div>





