{% extends 'MBHPackageBundle:Organization:layout.html.twig' %}

{% block scripts %}
    {{ parent() }}
    {% javascripts filter='uglifyjs2' '@MBHPackageBundle/Resources/public/js/organizations/create.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% set small_title = 'organizations.breadcrumbs.add'|trans({}, 'MBHPackageBundle') %}
{% set layout = 'box' %}

{% block content %}
    {{ form_start(form, {'action': path('create_organization'),  'attr': {'class': 'form-horizontal'}}) }}
    {{ form_widget(form) }}
    {% include 'MBHBaseBundle:Actions:new.html.twig' %}
    {{ form_end(form) }}

    {% include '@MBHBase/modalWithForm.html.twig' with {modalTitle: 'modal_with_form.add_city.title'|trans} %}
{% endblock %}