<div class="text-center bg-gray color-palette alert package-summary">
    <span class="package-summary-row">
        <b>{{ 'report.porter_summary.number_of_packages'|trans}}:</b> {{ summary.total }}
    </span>
    <span class="package-summary-row">
        <b>{{ 'report.porter_summary.number_of_nights'|trans}}:</b> {{ summary.nights }}
    </span>
    <span class="package-summary-row">
        <b>{{ 'report.porter_summary.number_of_guests'|trans}}:</b> {{ summary.guests }}
    </span>
    <span class="package-summary-row">
        <b>{{ 'report.porter_summary.sum'|trans}}:</b> {{ summary.price|number_format(2) }}
    </span>
    <span class="package-summary-row">
        <b>{{ 'report.porter_summary.payed'|trans}}:</b> {{ summary.paid|number_format(2) }}
    </span>
    <span class="package-summary-row">
        <b>{{ 'report.porter_summary.debt'|trans}}:</b> {{ summary.debt|number_format(2) }}
    </span>
</div>