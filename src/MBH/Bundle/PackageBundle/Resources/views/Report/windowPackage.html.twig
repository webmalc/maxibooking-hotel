<table class="table not-auto-datatable table-striped">
    <tbody>
    <tr><td><strong>#</strong></td><td>{{ package.numberWithPrefix }}</td></tr>
    <tr><td><strong>{{ 'report.window_package.dates'|trans}}</strong></td><td>{{ package.begin|mbh_format }} - {{ package.end|mbh_format }}</td></tr>
    <tr><td><strong>{{ 'report.window_package.tariff'|trans}}</strong></td><td>{{ package.tariff }}</td></tr>
    <tr><td><strong>{{ 'report.window_package.package_number'|trans}}</strong></td><td>{{ package.roomType }} - <small>{{ package.roomType.hotel }}</small></td></tr>
    <tr><td><strong>{{ 'report.window_package.guests'|trans}}</strong></td><td>{% if package.order.payer %}{{ package.order.payer.shortName }}{% else %}&lt;{{ "package.json.no_payer"|trans({}, "MBHPackageBundle") }}&gt;{% endif %}</a><small><br>{% if package.adults > 0 %}{{ package.adults }} {{ 'report.window_package.number_of_adults'|trans}}{% endif %}{% if package.adults > 0 and package.children > 0 %}+{% endif %}{% if package.children > 0 %}{{ package.children }} {{ 'report.window_package.number_of_children'|trans}}{% endif %} / {{ 'report.window_package.issued'|trans}}: {{ package.tourists|length }}</small></td></tr>
    <tr><td><strong>{{ 'report.window_package.package_price'|trans}}</strong></td><td>{{ package.price|number_format(2) }}</td></tr>
    <tr><td><strong>{{ 'report.window_package.package_accommodation'|trans}}</strong></td><td>{{ package.accommodation }}</td></tr>
    <tr><td><strong>{{ 'report.window_package.package_note'|trans}}</strong></td><td>{{ package.note|nl2br }}</td></tr>
    </tbody>
</table>

{% if form is defined %}
    {% form_theme form 'MBHBaseBundle:Form:fields.html.twig' %}
    {{ form_start(form, {'action': path('report_windows_package', {'id': package.id}),  'attr': {'class': 'form-horizontal'}}) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
{% endif %}