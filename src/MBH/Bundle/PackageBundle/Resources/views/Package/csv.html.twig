{% set boxtitle = 'package.csv.box_title'|trans %}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">{{ 'csv.form.modal_title'|trans }}</h4>
        </div>
        <div class="modal-body">
            {% form_theme form 'MBHPackageBundle:Documents:modalFormFields.html.twig' %}
            {{ form_start(form, {'action': path('package_csv'), 'method': 'POST', 'attr': {'class': 'form-horizontal'}}) }}
            {{ form_widget(form) }}

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'csv.form.modal_close'|trans }}</button>
                <button type="submit" id="generate_csv" class="btn btn-primary">{{ 'csv.form.modal_generate'|trans }}</button>
            </div>
            {{ form_end(form) }}

        </div>

    </div>
</div>

