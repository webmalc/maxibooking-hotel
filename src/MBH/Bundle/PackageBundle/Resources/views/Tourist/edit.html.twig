{% extends 'MBHPackageBundle:Tourist:layout.html.twig' %}

{% set small_title = "tourist.edit.small_title"|trans ~ entity.id %}
{% set layout = 'tabs' %}

{% block content %}
    {% include 'MBHPackageBundle:Tourist:tabs.html.twig' with {'active': 1, 'entity': entity} %}

    <div class="tab-content">
    {{ form_start(form, {'action': path('tourist_update', {'id': entity.id}),  'attr': {'class': 'form-horizontal'}}) }}
    {{ form_widget(form) }}
        <input type="hidden" value="{{ redirectTo }}" name="redirectTo">
    {% include 'MBHBaseBundle:Actions:update.html.twig' with {'entity': entity, 'route': 'tourist', 'redirectTo' : redirectTo } %}
    {{ form_end(form) }}

    {% include 'MBHBaseBundle:Partials:entityInfo.html.twig' with {'entity': entity, 'logs': logs } %}
    </div>
{% endblock %}
