{% extends "MBHRestaurantBundle:Ingredient:layout.html.twig" %}

{% set small_title = 'restaurant.common.small_title'|trans %}
{% set layout = "tabs" %}

{% block content %}
    <ul class="nav nav-tabs" role="tablist">
        {% for entity in entities %}
            <li {% if (loop.first and app.request.query.get('tab') is empty) or app.request.query.get('tab') == entity.id %}class="active"{% endif %}>
                <a href="#{{entity.id}}" role="tab" data-toggle="tab">
                    <i class="fa fa-cutlery"></i>  {{entity.name}}
                    {% if entity.system is defined and entity.system %}<small class="transparent"><i class="fa fa-lock"></i></small>{% endif %}
                </a>
            </li>
        {% endfor %}
        {% if is_granted('ROLE_RESTAURANT_CATEGORY_NEW') %}
            <li>
                <a href="{{ path('restaurant_ingredient_category_new') }}"><i class="fa fa-plus"></i> {{ 'restaurant.category.new'|trans|capitalize }}</a>
            </li>
        {% endif %}
    </ul>

    <form method="post" role="form" class="are-you-sure form-inline" action="{{ path('restaurant_category_save_prices') }}">
        <!-- Tabs content -->
        <div class="tab-content">
            {% for entity in entities %}
                <div class="tab-pane {% if (loop.first and app.request.query.get('tab') is empty) or app.request.query.get('tab') == entity.id %}active{% endif %}" id="{{entity.id}}">
                    <!-- Tab actions -->
                    <div class="btn-list spacer-bottom text-right">
                        {% if is_granted('ROLE_RESTAURANT_CATEGORY_EDIT') %}
                            <a href="{{ path('restaurant_ingredient_category_edit', {'id': entity.id }) }}" class="btn btn-sm btn-success" data-toggle="tooltip" data-placement="bottom" title="{{ 'restaurant.category.edit'|trans|capitalize }} <{{entity.name}}>"><i class="fa fa-edit"></i> {{ 'restaurant.common.edit'|trans|capitalize }}</a>
                        {% endif %}
                        {% if is_granted('ROLE_RESTAURANT_CATEGORY_NEW') %}
                            <a href="{{ path('restaurant_ingredient_new', {'id': entity.id }) }}" class="btn btn-sm btn-default" data-toggle="tooltip" data-placement="bottom" title="{{ 'restaurant.ingredient.addincat'|trans|capitalize }} <{{entity.name}}>"><i class="fa fa-plus"></i> {{ 'restaurant.ingredient.add'|trans|capitalize }}</a>
                        {% endif %}
                        {% if is_granted('ROLE_RESTAURANT_CATEGORY_DELETE') %}
                            <a href="{{ path('restaurant_ingredient_category_delete', {'id': entity.id }) }}" class="btn btn-sm btn-danger delete-link" data-toggle="tooltip" data-placement="bottom" title="{{ 'restaurant.category.delete'|trans|capitalize }} <{{entity.name}}>"><i class="fa fa-trash-o"></i> {{ 'restaurant.common.delete'|trans|capitalize }}</a>
                        {% endif %}
                    </div>

                    {% if entity.ingredients.count %}
                        <table class="table table-actions table-striped table-hover table-condensed table-icons">
                            <thead>
                            <tr>
                                <th class="td-xs"></th>
                                <th>{{ 'restaurant.ingredient.name'|trans }}</th>
                                <th class="td-md text-center">{{ 'restaurant.ingredient.price'|trans|capitalize }}</th>
                                <th class="td-sm text-center">{{ 'restaurant.ingredient.output'|trans|capitalize }}</th>
                                <th class="td-md text-right">{{ 'restaurant.ingredient.costprice'|trans|capitalize }} <i class="{{ currency().icon }}"></i></th>
                                <th class="td-sm text-center">{{ 'restaurant.ingredient.units'|trans|capitalize }}</th>
                                <th class="td-md text-center">{{ 'restaurant.ingredient.active'|trans|capitalize }}</th>
                                <th class="td-sm text-center">{{ 'restaurant.common.doing'|trans|capitalize }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entry in entity.ingredients %}
                                <tr>
                                    <td class="table-icon text-center"><i class="fa fa-cutlery"></i></td>
                                    <td>
                                        {% embed 'MBHBaseBundle:Actions:entry_link.html.twig' with {'entity': entry, 'route': 'restaurant_ingredient'} %}{% endembed %}
                                    </td>
                                    <td>
                                        <input name="entries[{{ entry.id }}][price]" class="form-control spinner-0f price-spinner input-sm" type="text" value="{{ entry.price }}">
                                    </td>
                                    <td class="text-center">
                                        {{ entry.output }}%
                                    </td>
                                    <td class="text-right">
                                        {{ entry.costprice|number_format(2,'.',',') }}
                                    </td>
                                    <td class="text-center">{{ entry.calcType|trans}}</td>
                                    <td class="text-center">
                                        <input class="checkbox-mini" name="entries[{{ entry.id }}][is_enabled]" type="checkbox" {{ entry.isEnabled ? 'checked' }} value="1">
                                    </td>
                                    <td class="table-actions-td text-center">
                                        {% embed 'MBHBaseBundle:Actions:entry_actions.html.twig' with {'entity': entry, 'route': 'restaurant_ingredient'} %}{% endembed %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="alert alert-warning"><i class="fa fa-exclamation-circle"></i> {{ 'restaurant.category.noingredients'|trans|capitalize }}. <a href="{{ path('restaurant_ingredient_new', {'id': entity.id }) }}">{{ 'restaurant.ingredient.add'|trans|capitalize }}?</a></div>
                    {% endif %}

                    <div id="actions" class="navbar navbar-default navbar-fixed-bottom main-footer">
                        <div class="container-fluid">
                            <ul class="nav navbar-nav">
                                {% if is_granted('ROLE_RESTAURANT_INGREDIENT_EDIT') and entity.ingredients.count %}
                                    <li><button type="submit" class="btn btn-success navbar-btn"><i class="fa fa-check-square-o"></i> {{ 'restaurant.common.save'|trans|capitalize }}</button></li>
                                {% endif %}
                                {% if is_granted('ROLE_RESTAURANT_CATEGORY_NEW') %}
                                    <li><button onclick="location.href = '{{ path('restaurant_ingredient_category_new') }}'" type="button" class="btn btn-default navbar-btn"><i class="fa fa-plus"></i> {{ 'restaurant.category.new'|trans|capitalize }}</button></li>
                                {% endif %}
                            </ul>
                            <ul class="nav navbar-nav navbar-right">
                                <li id='list-export-add-{{ loop.index }}'></li>
                            </ul>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <input name="activetab" type="hidden" value="" id="activetab">

    </form>

{% endblock content %}

{% block scripts %}
    {{ parent() }}
    {% javascripts filter='uglifyjs2'
    '@MBHRestaurantBundle/Resources/public/js/006-quicksave-form-tab-sent.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}